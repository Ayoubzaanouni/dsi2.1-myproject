{% extends 'base2.html.twig' %}

{% block title %}Liste produit{% endblock %}

{% block body %}
<h1> Liste de tous les Produits</h1>
<div class="container">
   

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nom</th>
      <th scope="col">Actions</th>
     
    </tr>
  </thead>
  <tbody>

    {% for produit in prods %}
        
        <tr>
      <th scope="row">{{ produit.id }}</th>
      <td>{{ produit.nom }}</td>
      <td><a href='{{ path("app_produit_one",{id:produit.id})}}'>Detail</a>
          - <a href='{{ path("app_produit_delete",{id:produit.id})}}'>Delete</a>
      </td>
      
    </tr>
    {% endfor %}
 </tbody>
</table>
</div>

{% endblock %}
